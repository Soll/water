<%= form_for @item do |i| %>
      <div class="form-group">
        <label >Наименование товара</label>
          <%= i.text_field :name, class: "form_control", type: "text" %>
      </div>

      <div class="form-group">
        <label >Категория товара</label>
          <%= i.select :item_type_id, ItemType.all.map { |c| [c.name, c.id] }, {}, class: "form_control" %>
      </div>
      
      <div class="form-group">
        <%= i.submit "Добавить", class: "btn btn-primary btn-sm" %>
      </div>
    <% end %>