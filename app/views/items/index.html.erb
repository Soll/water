<div class="container">
  <h3>Справочник товаров</h3>
  <div class="col-md-8">
    <%= link_to "Добавить новый товар", new_item_path, class: "btn btn-primary btn-xs" %>
  </div>
  <br><br>
  <div class="col-md-8">
    <table class="table table-hover table-condensed">
  	  <tr>
  	    <td><strong>#ID</strong></td>
  	    <td><strong>Наименование</strong></td>
  	    <td><strong>Категория</strong></td>
        <td><strong>Операции</strong></td>
  	  </tr>
  	  <% @items.each do |i| %>
        <tr>
  	      <td><%= i.id %></td>
  	      <td><%= i.name %></td>
          <td><%= i.item_type.name %></td>
  	      <td><%= link_to "Редактировать", edit_item_path(i), class: "btn btn-primary btn-xs" %>
  	          <%= link_to "Удалить", 
  	                      item_path(i), 
                          method: :delete,
                          data: { confirm: "Удалить категорию?" },
  	                      class: "btn btn-primary btn-xs" %></td>
  	    </tr>
  	  <% end %>
    </table>
  </div>
</div>