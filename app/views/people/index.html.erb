<div class="container">

  <h3>Справочник сотрудников</h3>
  <div class="col-md-8">
    <%= link_to "Добавить нового сотрудника", new_person_path, class: "btn btn-primary btn-xs" %>
  </div>
  <br><br>
  <div class="col-md-11">
    <table class="table table-hover table-condensed">
      <tr>
        <td><strong>#ID</strong></td>
        <td><strong>ФИО сотрудника</strong></td>
        <td><strong>Должность</strong></td>
        <td><strong>Операции</strong></td>
      </tr>
      <% @people.each do |person| %>
        <tr>
          <td><%= person.id %></td>
          <td><%= person.name %></td>
          <td><%= person.position %></td>
          <td><%= link_to "Просмотр", person, class: "btn btn-primary btn-xs" %>
          <%= link_to "Редактировать", edit_person_path(person), class: "btn btn-primary btn-xs" %>
              <%= link_to "Удалить", 
                          person_path(person), 
                          method: :delete,
                          data: { confirm: "Удалить сотрудника?" },
                          class: "btn btn-primary btn-xs" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
